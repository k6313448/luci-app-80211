config wifi-device 'radio0'
option type 'mac80211'
option channel '6'
option hwmode '11ng'
option path 'platform/ar933x_wmac'
option htmode 'HT20'
list ht_capab 'SHORT-GI-20'
list ht_capab 'SHORT-GI-40'
list ht_capab 'RX-STBC1'
list ht_capab 'DSSS_CCK-40'
option txpower '27'
option country 'US'

config wifi-iface
option device 'radio0'
option network 'lan'
option mode 'ap'
option encryption 'none'
option ssid 'bellnet-default'

config wifi-iface
option device 'radio0'
option mesh_id 'bellnet-mesh'
option encryption 'none'
option mode 'mesh'
option network 'mesh wan'
