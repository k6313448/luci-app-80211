config interface 'loopback'
option ifname 'lo'
option proto 'static'
option ipaddr '127.0.0.1'
option netmask '255.0.0.0'

config interface 'lan'
option proto 'static'
option type 'bridge'
option ipaddr '172.16.0.1'
option netmask '255.255.255.0'
option status 'wan'
option bridge 'true'
option ifname 'wlan0'

config interface 'wan'
option proto 'dhcp'
option type 'bridge'
option ifname 'eth0'
option bridge 'true'

config interface 'mesh'
option proto 'none'
